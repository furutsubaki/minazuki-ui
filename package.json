{
  "name": "vue-ghost-ui",
  "version": "0.0.0",
  "private": false,
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/furutsubaki/vue-ghost-ui"
  },
  "files": [
    "dist",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "eslint": "eslint . --ext .vue,.js,.cjs,.mjs,.ts,.cts,.mts --ignore-path .gitignore",
    "eslint:fix": "pnpm eslint --fix",
    "format": "prettier --write src/",
    "lint": "pnpm eslint",
    "lint:fix": "pnpm eslint:fix && pnpm format",
    "sb": "pnpm storybook dev --port 6006 --no-open",
    "sb:test": "test-storybook --url http://localhost:6006",
    "prepare": "husky install"
  },
  "peerDependencies": {
    "@acab/reset.css": "^0.8",
    "@vee-validate/rules": "^4",
    "@vee-validate/zod": "^4",
    "i18next": "^23",
    "pinia": "^2",
    "vee-validate": "^4",
    "vue": "^3",
    "zod": "^3",
    "zod-i18n-map": "^2"
  },
  "dependencies": {
    "@acab/reset.css": "^0.8.0",
    "@vee-validate/rules": "^4.12.4",
    "@vee-validate/zod": "^4.12.4",
    "i18next": "^23.7.16",
    "pinia": "^2.1.7",
    "vee-validate": "^4.12.4",
    "vue": "^3.4.15",
    "vue-router": "^4.2.5",
    "zod": "^3.22.4",
    "zod-i18n-map": "^2.25.0"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.7.2",
    "@storybook/addon-actions": "^7.6.11",
    "@storybook/addon-backgrounds": "^7.6.8",
    "@storybook/addon-controls": "^7.6.8",
    "@storybook/addon-docs": "^7.6.8",
    "@storybook/addon-measure": "^7.6.8",
    "@storybook/addon-outline": "^7.6.8",
    "@storybook/addon-viewport": "^7.6.11",
    "@storybook/preview-api": "^7.6.12",
    "@storybook/vue3": "^7.6.11",
    "@storybook/vue3-vite": "^7.6.8",
    "@tsconfig/node18": "^18.2.2",
    "@types/node": "^18.19.3",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/tsconfig": "^0.5.0",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "npm-run-all2": "^6.1.1",
    "postcss-nesting": "^12.0.2",
    "prettier": "^3.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.6.8",
    "typescript": "~5.3.0",
    "vite": "^5.0.10",
    "vite-plugin-dts": "^3.7.1",
    "vue-tsc": "^1.8.25"
  }
}
