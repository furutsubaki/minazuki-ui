{
  "name": "vue-ghost-ui",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "eslint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "lint": "pnpm eslint && pnpm format",
    "sb": "pnpm storybook dev --port 6006 --no-open",
    "sb:test": "test-storybook --url http://localhost:6006"
  },
  "dependencies": {
    "@acab/reset.css": "^0.8.0",
    "pinia": "^2.1.7",
    "vue": "^3.3.11",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.3.3",
    "@storybook/addon-actions": "^7.6.8",
    "@storybook/addon-backgrounds": "^7.6.8",
    "@storybook/addon-controls": "^7.6.8",
    "@storybook/addon-docs": "^7.6.8",
    "@storybook/addon-measure": "^7.6.8",
    "@storybook/addon-outline": "^7.6.8",
    "@storybook/addon-viewport": "^7.6.8",
    "@storybook/preview-api": "^7.6.8",
    "@storybook/vue3": "^7.6.8",
    "@storybook/vue3-vite": "^7.6.8",
    "@tsconfig/node18": "^18.2.2",
    "@types/node": "^18.19.3",
    "@vitejs/plugin-vue": "^4.5.2",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/tsconfig": "^0.5.0",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "npm-run-all2": "^6.1.1",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.6.8",
    "typescript": "~5.3.0",
    "vite": "^5.0.10",
    "vue-tsc": "^1.8.25"
  }
}
