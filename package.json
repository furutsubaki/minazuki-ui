{
  "name": "vue-ghost-ui",
  "version": "0.0.0",
  "private": false,
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/furutsubaki/vue-ghost-ui"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "eslint": "eslint . --ext .vue,.js,.cjs,.mjs,.ts,.cts,.mts --ignore-path .gitignore",
    "eslint:fix": "pnpm eslint --fix",
    "format": "prettier --write src/",
    "lint": "pnpm eslint",
    "lint:fix": "pnpm eslint:fix && pnpm format",
    "sb": "pnpm storybook dev --port 6006 --no-open",
    "sb:test": "test-storybook --url http://localhost:6006",
    "prepare": "husky install"
  },
  "dependencies": {
    "@acab/reset.css": "^0.8.0",
    "pinia": "^2.1.7",
    "vue": "^3.4.15",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.3.3",
    "@storybook/addon-actions": "^7.6.8",
    "@storybook/addon-backgrounds": "^7.6.8",
    "@storybook/addon-controls": "^7.6.8",
    "@storybook/addon-docs": "^7.6.8",
    "@storybook/addon-measure": "^7.6.8",
    "@storybook/addon-outline": "^7.6.8",
    "@storybook/addon-viewport": "^7.6.8",
    "@storybook/preview-api": "^7.6.8",
    "@storybook/vue3": "^7.6.8",
    "@storybook/vue3-vite": "^7.6.8",
    "@tsconfig/node18": "^18.2.2",
    "@types/node": "^20.11.7",
    "@vitejs/plugin-vue": "^4.5.2",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/tsconfig": "^0.5.0",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "husky": "^8.0.3",
    "npm-run-all2": "^6.1.1",
    "prettier": "^3.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.6.8",
    "typescript": "~5.3.0",
    "vite": "^5.0.10",
    "vite-plugin-dts": "^3.7.1",
    "vue-tsc": "^1.8.25"
  }
}
